
<div class="jumbotron">
  <div class="text-center">
    <h1 class="display-4">
        Get the latest outdoor news!
    </h1>
    <a class="btn btn-primary btn-lg" style="position: relative;top:20px" href="/scrape" role="button">Scrape the newest articles!</a>
  </div>
</div>

<h2 class="text-center">New Articles</h2>

<div class="article-div">
    {{#each articles}}
    <hr />
    <h3>{{this.title}}</h3>
    <p>{{this.summary}}</p>
    <a href={{this.link}}>Go To Article</a>
    <h5>Article comments</h5>
    {{#each this.comments}}
        <p>{{this.body}}</p>
        <small>{{this.createdDate}}</small>
    {{/each}}
    <form action="/api/{{this._id}}/comment" method="POST">
        <textarea name="body"></textarea>
        <button class="btn btn-success" type="submit">Add Comment</button>
    </form>
    <hr />
{{/each}}
</div>
